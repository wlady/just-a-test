<!DOCTYPE html>
<html>
<head>
    <title>Main Page</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="stylesheet" type="text/css" href="css/style.css"/>
    <script src="js/main.js"></script>
</head>
<body style="background:none">
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <form method="post">
                        <input type="hidden" name="logout" value="true"/>
                        <button type="submit" class="btn btn-primary">Logout</button>
                    </form>
                </div>
                <div class="col-md-10">
                    <form method="post" id="renameForm" onsubmit="return false">
                        <input type="hidden" name="rename" value="true"/>
                        <input type="hidden" name="id" id="renameId" value=""/>
                        <input type="text" name="alias" id="renameAlias" value=""/>
                        <button type="button" class="btn btn-primary" onclick="saveAlias()">Rename</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div id="gmap"></div>
        </div>
    </div>
</div>
<script>
    var map;

    function initMap() {
        map = new google.maps.Map(document.getElementById('gmap'), {
            center: {lat: -34.397, lng: 150.644},
            zoom: 8
        });
    }

</script>
<script src="https://maps.googleapis.com/maps/api/js?key={{ config.keys.google_api_key }}&callback=initMap"
        async defer></script>
</body>
</html>